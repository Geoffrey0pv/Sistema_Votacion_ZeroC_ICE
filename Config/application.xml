
<icegrid>

  <application name="SistemaVotacion">

    <node name="node1">
      <server id="RegionalServer" exe="java" activation="on-demand">
        <option>-jar</option>
        <option> ../Regional/build/libs/Regional.jar</option>
        <adapter name="Hello" endpoints="tcp -h localhost">
          <object identity="hello" type="::Demo::Hello" property="Identity"/>
        </adapter>

        <property name="IceMX.Metrics.Debug.GroupBy" value="id"/>
        <property name="IceMX.Metrics.Debug.Disabled" value="1"/>
        <property name="IceMX.Metrics.ByParent.GroupBy" value="parent"/>
        <property name="IceMX.Metrics.ByParent.Disabled" value="1"/>
      </server>
    </node>

  </application>

</icegrid>